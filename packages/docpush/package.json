{
  "name": "@shahadpichen/docpush",
  "version": "1.0.9",
  "publishConfig": {
    "access": "public"
  },
  "description": "Self-hosted, Git-backed collaborative documentation platform",
  "keywords": [
    "documentation",
    "markdown",
    "git",
    "collaborative",
    "cms",
    "self-hosted"
  ],
  "homepage": "https://github.com/shahadpichen/docpush",
  "repository": {
    "type": "git",
    "url": "https://github.com/shahadpichen/docpush.git"
  },
  "license": "MIT",
  "author": "DocPush Team",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "docpush": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev:server": "tsx watch src/server/index.ts",
    "build": "tsc",
    "build:server": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "format": "biome format src --write"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "resend": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@types/passport": "^1.0.16",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
